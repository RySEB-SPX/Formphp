<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $producto1 = $_POST['producto1'];
    $precio1 = floatval($_POST['precio1']);
    
    $producto2 = $_POST['producto2'];
    $precio2 = floatval($_POST['precio2']);
    
    $producto3 = $_POST['producto3'];
    $precio3 = floatval($_POST['precio3']);
    
    $sumaPrecios = $precio1 + $precio2 + $precio3;
    
    $descuento = 0.16;
    $totalAPagar = $sumaPrecios * (1 - $descuento);
    echo "<h1>Resumen de Productos</h1>";
    echo "<table>
            <tr>
                <th>Producto</th>
                <th>Precio</th>
            </tr>
            <tr>
                <td>$producto1</td>
                <td>$$precio1</td>
            </tr>
            <tr>
                <td>$producto2</td>
                <td>$$precio2</td>
            </tr>
            <tr>
                <td>$producto3</td>
                <td>$$precio3</td>
            </tr>
          </table>";
    echo "<h2>Suma de Precios: $$sumaPrecios</h2>";
    echo "<h2>Total a Pagar (con descuento del 16%): $$totalAPagar</h2>";
} else {
    echo "No se han enviado datos.";
}
?>
